<Window x:Class="SkeeBall.GameOver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Over" Height="400" Width="600"
        WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Game Over" Height="80" Name="lblTitle" VerticalAlignment="Top" FontSize="45" TextAlignment="Center" />
        <TextBlock Text="Player X Wins" Height="80" Name="lblWinner" VerticalAlignment="Center" FontSize="45" TextAlignment="Center" />
        <TextBlock Text="Please enter your name." Height="60" Name="lblInstructions" VerticalAlignment="Bottom" FontSize="36" TextWrapping="Wrap" TextAlignment="Center" />
    </Grid>
</Window>
